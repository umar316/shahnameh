<div class="productView-info{% if enable_border_top %} has-border-top{% endif %}{% if enable_border_bottom %} has-border-bottom{% endif %}" style="--color-border: {{ color_border }}">
    {%- if show_vendor -%}
        <div class="productView-info-item">
            <span class="productView-info-name">
                {{ 'products.product.text.vendor' | t }}
            </span>
            <span class="productView-info-value">{{ product.vendor | link_to_vendor }}</span>
        </div>
    {%- endif -%}
    {%- if show_sku -%}
        <div class="productView-info-item" data-sku {% unless current_variant.sku != blank %} style="display: none;"{% endunless %}>
            <span class="productView-info-name">
                {{ 'products.product.text.sku' | t }}
            </span>
            <span class="productView-info-value">{{ current_variant.sku }}</span>
        </div>
    {%- endif -%}
    {%- if show_availability -%}
        <div class="productView-info-item" data-inventory data-stock-level="{{ stock_level_display }}">
            <span class="productView-info-name">
                {{ 'products.product.text.availability' | t }}
            </span>
            <span class="productView-info-value">
                {% if current_variant.inventory_management %}
                    {%- assign first_inventory = current_variant.inventory_quantity -%}

                    {%- if first_inventory > 0 -%}
                        {% if stock_level_display == 'show' %}{{ first_inventory }} {% endif %}
                        {{ 'products.product.in_stock' | t }}
                    {%- else -%}
                        {{ 'products.product.out_of_stock' | t }}
                    {%- endif -%}
                {% else %}
                    {{ 'products.product.many_in_stock' | t }}
                {% endif %}
            </span>
     
        </div>
    {%- endif -%}
   <script>
  
  // Add an event listener to the anchor element to handle the click event
  document.querySelector(".popup-trigger").addEventListener("click", function() {
    // Find the associated popup element by its ID
    const popup = document.querySelector("#halo-size-chart-popup");

    // Check if the popup element exists and toggle its visibility
    if (popup) {
      // You can use a class to control visibility or directly modify the style
      if (popup.style.display === "none" || popup.style.display === "") {
        popup.style.display = "block";
      } else {
        popup.style.display = "none";
      }
    }
  });
</script>
           <a data-toggle="modal" data-target="#halo-size-chart-popup" class="size-chart-open-popup">
                 Size Chart
                </a>
    {%- if show_product_type and product.type != blank -%}
        <div class="productView-info-item">
            <span class="productView-info-name">
                {{ 'products.product.text.type' | t }}
            </span>
            <span class="productView-info-value">
                {{ product.type | escape }}
            </span>
        </div>
    {%- endif -%}
</div>